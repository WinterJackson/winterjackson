generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String?
  name      String?
  image     String?
  createdAt DateTime  @default(now())
  accounts  Account[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Profile {
  id              String   @id @default(cuid())
  name            String   @default("Winter Jackson")
  title           String   @default("Software Developer")
  email           String   @default("winterjacksonwj@gmail.com")
  phone           String   @default("+254 795 213 399")
  altPhone        String?
  location        String   @default("Nairobi, Kenya")
  bio             String
  avatarUrl       String?
  github          String?
  linkedin        String?
  whatsapp        String?
  cvUrl           String?
  updatedAt       DateTime @updatedAt
  profileVideoUrl String?
}

model Service {
  id          String   @id @default(cuid())
  title       String
  description String
  iconUrl     String
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  category    String   @default("service")
}

model SiteSettings {
  id                String   @id @default(cuid())
  maintenanceMode   Boolean  @default(false)
  siteUrl           String   @default("")
  metaTitle         String   @default("Winter Jackson | Software Developer")
  metaDescription   String   @default("Portfolio of Winter Jackson")
  metaKeywords      String   @default("software, developer, portfolio")
  ogImageUrl        String   @default("")
  navbarTitle       String   @default("Winter Jackson")
  logoUrl           String   @default("")
  footerText        String   @default("Â© 2024 Winter Jackson. All rights reserved.")
  showTestimonials  Boolean  @default(true)
  showProjects      Boolean  @default(true)
  showServices      Boolean  @default(true)
  contactEmail      String   @default("winterjacksonwj@gmail.com")
  googleAnalyticsId String   @default("")
  primaryColor      String   @default("#FFDB70")
  updatedAt         DateTime @updatedAt
}

model Project {
  id          String   @id @default(cuid())
  title       String
  category    String
  categories  String[]
  description String
  imageUrl    String
  webpUrl     String?
  demoUrl     String?
  githubUrl   String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
}

model Testimonial {
  id          String   @id @default(cuid())
  name        String
  role        String
  company     String?
  text        String
  linkedinUrl String?
  avatarUrl   String?
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
}

model Experience {
  id          String   @id @default(cuid())
  jobTitle    String
  company     String
  startDate   String
  endDate     String?
  description String
  order       Int      @default(0)
  createdAt   DateTime @default(now())
}

model Education {
  id          String @id @default(cuid())
  institution String
  degree      String
  field       String
  startDate   String
  endDate     String
  order       Int    @default(0)
}

model Skill {
  id         String  @id @default(cuid())
  name       String
  percentage Int     @default(75)
  category   String
  iconUrl    String?
  order      Int     @default(0)
}

model Client {
  id       String  @id @default(cuid())
  name     String
  logoUrl  String
  order    Int     @default(0)
  isActive Boolean @default(true)
}

model Message {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}
